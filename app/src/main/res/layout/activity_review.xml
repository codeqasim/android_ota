<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws.wolfsoft.hotelup.ReviewActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/toolbar_guest_rooms"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <customfonts.MyTextView_Roboto_Light
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textColor="@color/black"
                        android:textSize="26.7sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_star_green"/>
                </LinearLayout>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:text="@string/rating"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/view_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Value for money"
                            android:textSize="10sp"
                            android:textColor="@color/sub_txt_gray"/>

                        <SeekBar
                            android:id="@+id/seekbar"
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:progress="50"
                            android:progressDrawable="@drawable/seekbar_style"
                            android:splitTrack="false"
                            android:thumbTint="#00000000" />


                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="10sp"
                            android:text="4.6/5" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="10sp"
                            android:textColor="@color/sub_txt_gray"/>

                        <SeekBar
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:progress="20"
                            android:progressDrawable="@drawable/seekbar_style"
                            android:splitTrack="false"
                            android:thumbTint="#00000000" />


                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="10sp"
                            android:text="2.7/5" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Cleanliness"
                            android:textSize="10sp"
                            android:textColor="@color/sub_txt_gray"/>

                        <SeekBar
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:progress="40"
                            android:progressDrawable="@drawable/seekbar_style"
                            android:splitTrack="false"
                            android:thumbTint="#00000000" />


                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="10sp"
                            android:text="4.5/5" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Amenities"
                            android:textSize="10sp"
                            android:textColor="@color/sub_txt_gray"/>

                        <SeekBar
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:progress="70"
                            android:progressDrawable="@drawable/seekbar_style"
                            android:splitTrack="false"
                            android:thumbTint="#00000000" />


                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sub_txt_gray"
                            android:textSize="10sp"
                            android:text="3.6/5" />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="11dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:text="Verified Photos by Users"
                    android:textSize="11.7sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">


                    <!--RoundedImageView Library Can be Used-->

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageView1"
                        android:src="@drawable/a11"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />

                    <!--RoundedImageView Library Can be Used-->

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/a22"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginLeft="6.4dp"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />



                    <!--RoundedImageView Library Can be Used-->



                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/a33"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginLeft="6.4dp"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:src="@drawable/a44"
                            android:layout_width="74.7dp"
                            android:layout_height="74.7dp"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="5dip"
                            android:layout_marginLeft="6.4dp"
                            android:layout_marginRight="6.4dp"
                            app:riv_oval="false" />
                        <!--<ImageView-->
                            <!--android:layout_width="74.7dp"-->
                            <!--android:layout_height="74.7dp"-->
                            <!--android:layout_marginLeft="6.4dp"-->
                            <!--android:layout_marginRight="6.4dp"-->
                            <!--android:src="@drawable/transperent_rect"/>-->

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="+45 Photos"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/white"/>




                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <!--Review Recyclerview-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>


    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_above="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:layout_above="@+id/linear"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="26dp"

        android:orientation="vertical">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#e6981e"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/get"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:background="#43494d"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$149"
                    android:textSize="16.7sp"
                    android:textColor="@color/white"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="per night"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

            </LinearLayout>

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strike_line"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"

                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                android:textSize="10sp"/>
            </LinearLayout>


        </LinearLayout>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Select room"
            android:background="@drawable/red1_rect"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="20dp"/>



    </LinearLayout>
</RelativeLayout>
