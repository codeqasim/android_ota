<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="ws.wolfsoft.hotelup.PhoneVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">


    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Verification"
        android:textSize="28.3sp"
        android:textColor="@color/dark_gray"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="13.3sp"
            android:layout_marginTop="8dp"
            android:text="Please enter your mobile phone number."/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/phn_rect"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_car_maker"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_spinner"
            android:spinnerMode="dropdown"/>



            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123 456 7890"
                android:textSize="15sp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="27dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="12dp"
                android:background="@drawable/phn_rect"
                android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:text="PIN"/>

            <customfonts.EditTextRobotoRegular
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enter PIN"
                android:textSize="15sp"
                android:textColor="#8f948d"
                android:layout_marginLeft="30dp"
                android:paddingRight="50dp"
                android:background="@color/transperent"/>
            </LinearLayout>


            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13.3sp"
                android:text="Resend"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:layout_marginLeft="15dp"
                android:background="@color/red"/>
        </LinearLayout>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will try to autoverify"
            android:textSize="11.7sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/dark_gray"/>


        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:textSize="15sp"
            android:background="@drawable/light_white_rect"
            android:gravity="center"
            android:padding="12sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="26dp"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="11.7sp"
                android:text="By clicking continue, you agree to our "/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="11.7sp"
                android:text="Terms and Conditions "/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
