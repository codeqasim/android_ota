<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="ws.wolfsoft.hotelup.HomeHotelActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include layout="@layout/homehoteltoolbar"/>
            </android.support.v7.widget.CardView>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:elevation="2dp"
            android:layout_margin="10dp"
            android:background="@drawable/corner_rect">


            <customfonts.EditTextRobotoRegular
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Where are you traveling?"
                android:textSize="15sp"
                android:background="@color/transperent"
                android:textColor="@color/black"
                android:textColorHint="#383c3f"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"/>

        </LinearLayout>


    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_destination"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:textSize="11.7sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15.7dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:src="@drawable/tajmahel"

        android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="#50000000"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.7dp"
            android:textColor="@color/white"
            android:text="Holiday travel 2018"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="bottom"/>



    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.4dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="7dp"
                android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/world_heritage"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORLD HERITAGE"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14.4dp"/>

            </FrameLayout>



            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="13dp"
                android:layout_height="wrap_content">


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bestplace"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST PLACE TO LIVE"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14.4dp"/>

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.4dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="7dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/top_stories"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP STORIES"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14.4dp"/>

            </FrameLayout>



            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="13dp"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/advanture"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVANTURE TRAVEL"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14.4dp"/>

            </FrameLayout>

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    </ScrollView>



</LinearLayout>
